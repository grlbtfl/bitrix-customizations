{
  "manifest_version": 3,
  "name": "Bitrix24 customizations",
  "version": "0.2.0",
  "description": "customizations Bitrix24 new message sound with a custom URL",
  "permissions": ["storage"],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://*.bitrix24.ru/*",
        "https://*.bitrix24.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["config.json", "hook.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
